---
const { variant, size } = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
  button {
    padding: 10px;
    border-radius: 10px;
    border: none;

    color: var(--text);
  }
  .primary {
    color: var(--background);
    background-color: white;
  }
  .small {
    font-size: 0.8rem;
  }
  .secondary {
    background-color: rgba(143, 129, 129, 0.229);
  }
  button:hover {
    opacity: 50%;
  }
</style>
