---
import "../styles/style.css";
import Header_1 from "../components/Header_1.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body>
    <Header_1 />
    <main>
      <slot />
    </main>
  </body>
</html>
<style>
  main {
    display: flex;
    justify-content: start;
  }
</style>
